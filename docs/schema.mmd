SURVEY {
  string survey_id PK
  string titulo
  string tema
  string grado
  boolean activa
}

QUESTION {
  string question_id PK
  string enunciado
  string tipo
  int puntos
  boolean obligatoria
  string survey_id FK
}

OPTION {
  string option_id PK
  string texto
  boolean es_correcta
  string question_id FK
}

RESPONSE {
  string response_id PK
  string nombre_alumno
  date fecha_entrega
  int calificacion_total
  string survey_id FK
}

ANSWER {
  string answer_id PK
  string opcion_seleccionada
  boolean es_correcta
  string question_id FK
  string response_id FK
}
  +Boolean obligatoria
}

class Option {
  +String optionId
  +String texto
  +Boolean esCorrecta
}

class Response {
  +String responseId
  +String nombreAlumno
  +Date fechaEntrega
  +Number calificacionTotal
}

class Answer {
  +String questionId
  +String opcionSeleccionada
  +Boolean esCorrecta
}