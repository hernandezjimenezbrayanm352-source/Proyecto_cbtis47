classDiagram

Survey "1" *-- "many" Question : contains
Question "1" *-- "many" Option : has
Survey "1" o-- "many" Response : collects
Response "1" *-- "many" Answer : includes
User "1" --> "many" Response : submits

class Survey {
  +String surveyId
  +String title
  +String description
  +Date createdAt
  +Boolean isActive
}

class Question {
  +String questionId
  +String text
  +String type
  +Boolean required
}

class Option {
  +String optionId
  +String text
  +Boolean isCorrect
}

class Response {
  +String responseId
  +Date submittedAt
  +Number score
}

class Answer {
  +String questionId
  +String selectedOptionId
}

class User {
  +String userId
  +String name
  +String email
}
